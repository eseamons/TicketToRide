<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ttrmap"
        android:id="@+id/map"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/map"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:maxLines = "10"
            android:scrollbars = "vertical"
            android:id="@+id/map_destinationView"/>

        <TextView
            android:id="@+id/purpleNum1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/purple"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:clickable="true"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/whiteNum"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:clickable="true"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/blueNum"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:clickable="true"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/yellowNum"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/yellow"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:clickable="true"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/orangeNum"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:clickable="true"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/blackNum"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:clickable="true"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/redNum"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:clickable="true"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/greenNum"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:clickable="true"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/wildNum"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:clickable="true"
            android:textSize="30dp" />

        <Button
            android:id="@+id/claimRouteButton"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="CLAIM ROUTE"
            android:textSize="10dp" />

        <Button
            android:id="@+id/drawDestinationButton"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="DRAW DESTINATION"
            android:textSize="10dp" />



    </LinearLayout>

    <Button
        android:id="@+id/button_QUIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="GameOver" />

    <Button
        android:layout_width="40dp"
        android:layout_height="105dp"
        android:text="T     O      D      E     C    K"
        android:textSize="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/button_TODECK"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="105dp"
        android:text="T  O  S   T  A  T  S"
        android:textSize="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/button_TOSTATS"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/STUPIDBUTTON"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:text="STUPID BUTTON"
        android:textSize="20dp"

        android:visibility="gone" />

    <Button
        android:id="@+id/destinationCard1Button"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:text="Destination Card 1"
        android:layout_above="@+id/linearLayout"
        android:layout_toRightOf="@+id/button_TODECK"
        android:layout_toEndOf="@+id/button_TODECK" />

    <Button
        android:id="@+id/destinationCard2Button"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Destination Card 2"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:layout_above="@+id/linearLayout"
        android:layout_toRightOf="@+id/destinationCard1Button"
        android:layout_toEndOf="@+id/destinationCard1Button" />

    <Button
        android:id="@+id/destinationCard3Button"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginLeft="109dp"
        android:layout_marginStart="109dp"
        android:text="Destination Card 3"
        android:layout_above="@+id/linearLayout"
        android:layout_toRightOf="@+id/destinationCard2Button"
        android:layout_toEndOf="@+id/destinationCard2Button" />

    <Button
        android:id="@+id/ConfirmDestinationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/destinationCard2Button"
        android:layout_toLeftOf="@+id/button_TOSTATS"
        android:layout_toStartOf="@+id/button_TOSTATS"
        android:text="Confirm" />
</RelativeLayout>

