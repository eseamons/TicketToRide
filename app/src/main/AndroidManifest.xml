<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.erics.tickettoride">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="client.views.LoginView"
            android:screenOrientation="landscape" />
        <activity
            android:name="client.views.GameLobbyView"
            android:screenOrientation="landscape" />
        <activity
            android:name="client.views.GameListView"
            android:screenOrientation="landscape" />
        <activity
            android:name="client.views.GameDeckView"
            android:screenOrientation="landscape" />
        <activity
            android:name="client.views.GameStatsView"
            android:screenOrientation="landscape" />
        <activity
            android:name="client.views.MapViewActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="client.views.GameOverView"></activity>
    </application>

</manifest>